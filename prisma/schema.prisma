// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Posto {
  id       String @id @default(uuid())
  name     String
  email    String
  senha    String
  cpf      String @unique
  telefone String
  endereco String
  estado   String
  bairro   String
  cidade   String
  unidade  String

  Medicamentos Medicamentos[]
}

model Medicamentos {
  id         String @id @default(uuid())
  postoId    String
  name       String
  data       String
  quantidade String
  descricao  String

  user Posto @relation(fields: [postoId], references: [id])
}
